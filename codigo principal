import pygame

pygame.init()

x = 1280
y = 720
 
screen = pygame.display.set_mode((x,y))
pygame.display.set_caption('Meu jogo em python')

#precisa coloca a imagem dentro do parenteses depois do load
#imagem background
bg = pygame.image.load().convert_alpha()
bg = pygame.transform.scale(bg, (x,y))

#precisa colocar as imagens
#define imagem invasores
alien = pygame.image.load().convert_alpha()
alien = pygame.transform.scale(alien (50, 50))
#define imagem nave
player = pygame.image.load().convert_alpha()
player = pygame.transform.scale(player, (50, 50))#convers√£o do tamanho da nave
player = pygame.transform.rotate(player, -90)

pos_alien_x = 500
pos_alien_y = 360

pos_player_x = 200
pos_player_y = 300


rodando = True

while rodando:
    for event in pygame.event.get():
        if event.type == pygame.QUIT:
            rodando = False

    screen.blit(bg, (0,0))

    rel_x = x % bg.get_rect().width
    screen.blit(bg, (rel_x - bg.rect().width,0)) #cria background
    if rel_x < 1280:
        screen.blit(bg, (rel_x, 0))

    #define teclas
    tecla = pygame.key.get_pressed()
    if tecla[pygame.K_UP] and pos_player_y > 1:
        pos_player_y -= 1
    elif tecla[pygame.K_DOWN] and pos_player_y < 665:
        pos_player_y += 1

    #movimento do background
    x -= 2
    pos_alien_x -= 1
    
    #cria imagem invasores e nave
    screen.blit(alien(pos_alien_x, pos_alien_y))
    screen.blit(player(pos_alien_x, pos_alien_y))
    
    pygame.display.update()
